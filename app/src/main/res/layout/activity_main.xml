<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_weight="6"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/screen"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".MainActivity">
    <!-- CARD VIEW -->
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/blue"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
      <LinearLayout
          android:gravity="center"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/TV0"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_marginTop="10dp"
              android:text="Remaining Time For The Election"
              android:textAlignment="center"
              android:textColor="@android:color/white"
              android:textSize="20.sp"
              android:textStyle="bold">
          </TextView>

      </LinearLayout>

        <TextView
            android:id="@+id/TVhms"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:text="Hours Minutes Seconds"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20.sp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/TVtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="5dp"
            android:text=" 124  4  30  05"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30.sp"
            android:textStyle="bold">
        </TextView>
    </androidx.cardview.widget.CardView>

    <!--    </Button>-->
    <Button

        android:id="@+id/candiBtn"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:text="CANDIDATE"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20.sp"
        android:textStyle="bold"
        android:backgroundTint="@color/white"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>


    <!-- PART 1-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_weight="2"

        app:cardBackgroundColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/sir"
            android:layout_width="200dp"
            android:layout_height="150dp">

        </ImageView>
        <TextView
            android:id="@+id/sir"
            android:text="Aminul"

            android:textColor="@color/white"
            android:layout_marginLeft="190dp"
            android:textSize="30.sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <Button
            android:layout_marginTop="70dp"
            android:layout_marginLeft="200dp"
            android:text="About"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20.sp"
            android:textStyle="bold"
            android:backgroundTint="@color/blue"
            android:layout_marginBottom="15dp"
            android:layout_width="150dp"
            android:layout_height="60dp">

        </Button>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
      android:layout_weight=".50"
        app:cardBackgroundColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/asgor"
            android:layout_width="200dp"
            android:layout_height="150dp">

        </ImageView>
        <TextView
            android:id="@+id/asgor"
            android:text="Asgor"

            android:textColor="@color/white"
            android:layout_marginLeft="190dp"
            android:textSize="30.sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <Button


            android:layout_marginTop="70dp"
            android:layout_marginLeft="200dp"
            android:text="About"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20.sp"
            android:textStyle="bold"
            android:backgroundTint="@color/blue"
            android:layout_marginBottom="15dp"
            android:layout_width="150dp"
            android:layout_height="60dp">

        </Button>
    </androidx.cardview.widget.CardView>
   <!-- PART 2 END-->
    <androidx.cardview.widget.CardView
      android:id="@+id/card3"
       android:layout_weight="2"
        app:cardBackgroundColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/jui"
            android:layout_width="200dp"
            android:layout_height="150dp">

        </ImageView>
        <TextView
            android:id="@+id/jui"
            android:text="Jui"

            android:textColor="@color/white"
            android:layout_marginLeft="190dp"
            android:textSize="30.sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <Button


            android:layout_marginTop="70dp"
            android:layout_marginLeft="200dp"
            android:text="About"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20.sp"
            android:textStyle="bold"
            android:backgroundTint="@color/blue"
            android:layout_marginBottom="15dp"
            android:layout_width="150dp"
            android:layout_height="60dp">

        </Button>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_weight="2"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:id="@+id/card5"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/black"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/mafi"
            android:layout_width="200dp"
            android:layout_height="150dp">
        </ImageView>
        <TextView
            android:id="@+id/mafi"
            android:text="Mafi"

            android:textColor="@color/white"
            android:layout_marginLeft="190dp"
            android:textSize="30.sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <Button
            android:id="@+id/mafiBtn"
            android:layout_marginTop="70dp"
          android:layout_marginLeft="200dp"
            android:text="About"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20.sp"
            android:textStyle="bold"
            android:backgroundTint="@color/blue"
            android:layout_marginBottom="15dp"
            android:layout_width="150dp"
            android:layout_height="60dp">

        </Button>
    </androidx.cardview.widget.CardView>

    <Button

        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/white"
        android:padding="10dp"
        android:paddingHorizontal="5dp"
        android:text="VOTE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20.sp"
        android:textStyle="bold">

    </Button>

</LinearLayout>